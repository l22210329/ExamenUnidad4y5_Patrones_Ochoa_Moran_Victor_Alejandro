<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EXAMEN_4_Y_5_Unidad.MainPage"
    Title=""
    Shell.NavBarIsVisible="True"
    BackgroundColor="#F7F9FC">

     <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            
            <Label Text="Agenda de Recordatorios"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#0B1220"
                   Margin="0,6"/>

            
            <Frame CornerRadius="12"
                   BackgroundColor="White"
                   HasShadow="True"
                   Padding="16">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Fecha" TextColor="#0B1220" />
                    <DatePicker Date="{Binding Fecha}" TextColor="#0B1220"/>

                    <Label Text="Descripción" TextColor="#0B1220" />
                    <Entry Text="{Binding Descripcion}"
                           Placeholder="Escribe aquí..."
                           TextColor="#0B1220"
                           PlaceholderColor="#9CA3AF" />

                    <Label Text="Tipo de evento" TextColor="#0B1220" />
                    <Picker ItemsSource="{Binding TiposDisponibles}"
                            SelectedItem="{Binding Tipo}"
                            Title="Selecciona un tipo"
                            TextColor="#0B1220"
                            TitleColor="#6B7280" />

                    <HorizontalStackLayout Spacing="12" Margin="0,6,0,0">
                        <Button Text="Agregar"
                                Command="{Binding AgregarEventoCommand}"
                                BackgroundColor="#0EA5E9"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="44"
                                HorizontalOptions="FillAndExpand"/>
                        <Button Text="Deshacer"
                                Command="{Binding RestaurarCommand}"
                                BackgroundColor="#F43F5E"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="44"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            
            <Label Text="Eventos" FontSize="18" FontAttributes="Bold" TextColor="#0B1220"/>

            <CollectionView ItemsSource="{Binding Eventos}"
                            SelectionMode="None"
                            HeightRequest="360">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               Padding="12"
                               Margin="0,6"
                               BackgroundColor="White"
                               HasShadow="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                
                                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Start">
                                    <Label Text="{Binding Fecha, StringFormat='{0:dd}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#0B1220" />
                                    <Label Text="{Binding Fecha, StringFormat='{0:MMM yyyy}'}"
                                           FontSize="12"
                                           TextColor="#6B7280" />
                                </VerticalStackLayout>

                                
                                <VerticalStackLayout Grid.Column="1" Padding="12,0,0,0">
                                    <Label Text="{Binding Descripcion}"
                                           FontSize="16"
                                           TextColor="#0B1220"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding Tipo.Nombre}"
                                           FontSize="13"
                                           TextColor="#6B7280"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>